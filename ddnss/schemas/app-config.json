{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"server_name": {
			"default": "DD-Cluster DDNS Server",
			"type": "string"
		},
		"global": {
			"anyOf": [
				{
					"type": "object",
					"properties": {
						"update_interval": {
							"default": "30min",
							"type": "string"
						}
					},
					"additionalProperties": false
				},
				{
					"type": "null"
				}
			]
		},
		"accounts": {
			"type": "object",
			"propertyNames": {
				"type": "string"
			},
			"additionalProperties": {
				"type": "object",
				"properties": {
					"type": {
						"type": "string",
						"const": "cloudflare_api"
					},
					"api_key": {
						"type": "string"
					}
				},
				"required": [
					"type",
					"api_key"
				],
				"additionalProperties": false
			}
		},
		"records": {
			"type": "object",
			"propertyNames": {
				"type": "string"
			},
			"additionalProperties": {
				"anyOf": [
					{
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"const": "local"
							},
							"record": {
								"anyOf": [
									{
										"type": "string",
										"const": "A"
									},
									{
										"type": "string",
										"const": "AAAA"
									}
								]
							}
						},
						"required": [
							"type",
							"record"
						],
						"additionalProperties": false
					},
					{
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"const": "local_prefix"
							},
							"record": {
								"anyOf": [
									{
										"type": "string",
										"const": "A"
									},
									{
										"type": "string",
										"const": "AAAA"
									}
								]
							},
							"prefix_mask": {
								"anyOf": [
									{
										"type": "string"
									},
									{
										"type": "number"
									}
								]
							},
							"suffix": {
								"type": "string"
							}
						},
						"required": [
							"type",
							"record",
							"prefix_mask",
							"suffix"
						],
						"additionalProperties": false
					}
				]
			}
		},
		"endpoints": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"type": {
						"type": "string",
						"const": "cloudflare_record"
					},
					"account": {
						"type": "object",
						"properties": {
							"type": {
								"type": "string",
								"const": "cloudflare_api"
							},
							"api_key": {
								"type": "string"
							}
						},
						"required": [
							"type",
							"api_key"
						],
						"additionalProperties": false
					},
					"check_name": {
						"anyOf": [
							{
								"type": "string"
							},
							{
								"type": "string",
								"const": "as-name"
							}
						]
					},
					"zone_id": {
						"type": "string"
					},
					"record_id": {
						"type": "string"
					},
					"record": {
						"anyOf": [
							{
								"type": "object",
								"properties": {
									"type": {
										"type": "string",
										"const": "local"
									},
									"record": {
										"anyOf": [
											{
												"type": "string",
												"const": "A"
											},
											{
												"type": "string",
												"const": "AAAA"
											}
										]
									}
								},
								"required": [
									"type",
									"record"
								],
								"additionalProperties": false
							},
							{
								"type": "object",
								"properties": {
									"type": {
										"type": "string",
										"const": "local_prefix"
									},
									"record": {
										"anyOf": [
											{
												"type": "string",
												"const": "A"
											},
											{
												"type": "string",
												"const": "AAAA"
											}
										]
									},
									"prefix_mask": {
										"anyOf": [
											{
												"type": "string"
											},
											{
												"type": "number"
											}
										]
									},
									"suffix": {
										"type": "string"
									}
								},
								"required": [
									"type",
									"record",
									"prefix_mask",
									"suffix"
								],
								"additionalProperties": false
							}
						]
					}
				},
				"required": [
					"name",
					"type",
					"account",
					"zone_id",
					"record_id",
					"record"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"endpoints"
	],
	"additionalProperties": false
}